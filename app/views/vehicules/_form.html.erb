<%= simple_form_for @vehicule do |f| %>
<%= f.input :brand %>
<%= f.input :model %>
<%= f.input :mileage %>
<%= f.input :price_per_day, as: :slider, min: 0, max: 200 %>
<%= f.input :year %>
<%= f.input :fuel_type, collection: ["Unleaded", "Diesel", "Electric"] %>
<%= f.input :transmission, collection: ["Automatic", "Manual"] %>
<%= f.input :category, collection: ["Van", "City car", "SUV", "Motorbike", "Scooter", "Convertible", "4WD"]%>
<%= f.input :photo %>
<%= f.input :photo_cache, as: :hidden %>
<%= f.input :location %>
<%= f.submit 'ADD YOUR CAR', { class: 'button-yellow' } %>
<% end %>
