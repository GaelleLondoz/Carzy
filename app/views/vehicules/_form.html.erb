<%= simple_form_for @vehicule do |f| %>
<%= f.input :brand %>
<%= f.input :model %>
<%= f.input :mileage %>
<%= f.input :price_per_day, as: :slider, min: 0, max: 200 %>
<%= f.input :year %>
<%= f.input :number_of_seats %>
<%= f.input :description %>
<%= f.input :fuel_type, collection: ["Unleaded", "Diesel", "Electric"], input_html:{class: "width"}  %>
<%= f.input :transmission, collection: ["Automatic", "Manual"], input_html:{class: "width"} %>
<%= f.input :category, collection: ["Van", "City car", "SUV", "Motorbike", "Scooter", "Convertible", "4WD"],  input_html:{class: "width"} %>
<%= f.input :photo %>
<%= f.input :photo_cache, as: :hidden %>
<%= f.input :location, input_html:{id: "vehicule_location"}%>
<%= f.submit 'Loan my vehicule', { class: 'button-yellow' } %>
<% end %>
